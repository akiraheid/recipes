doctype html
html(lang='en')
	head
		title Recipes
		include ./parts/commonheader
		link(rel='stylesheet' href=cssURL + '/style.css')
		script(src=jsURL + '/util.js')
		script(src=jsURL + '/client.js')
		script(src=jsURL + '/pantry.js')
		script(src=jsURL + '/search.js')
		script.
			const DATA_URL = '#{dataURL}'

	body(class='bg-dark text-white')
		h1 Pantry
		div(class='container')

			- var pantryActive = 'active'
			include ./parts/navbar

			div(class='row')
				div(class='col')
					label(for='filter') Filter
					input(
						id='filter'
						class='form-control'
						type='text'
						onkeyup='search(event, this, (val) => filterTable(val))'
					)

			div(id='filterTable' class='mt-3') Loading pantry...
